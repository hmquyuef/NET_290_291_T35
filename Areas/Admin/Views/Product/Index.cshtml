@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header text-end">
        <button type="button" class="btn btn-label-danger" onclick="DeleteProduct()">
            <i class='bx bx-trash-alt me-1'></i>Xóa
        </button>
        <button type="button" class="btn btn-label-primary" data-bs-toggle="modal" data-bs-target="#modalCreateUpdateProduct">
            <i class='bx bx-plus me-1'></i>Thêm mới
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>
                            <input type="checkbox" id="allCheckbox" class="form-check-input" />
                        </th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Đánh giá</th>
                        <th>Danh mục</th>
                        <th>Trạng thái</th>
                        <th>Mô tả</th>
                        <th>Sự kiện</th>
                    </tr>
                </thead>
                <tbody id="listproduct"></tbody>
            </table>
        </div>
    </div>
</div>

@Html.Partial("ModalCreateUpdateProductPartial")

@section Scripts {
    <script src="~/js/product.js"></script>
}
