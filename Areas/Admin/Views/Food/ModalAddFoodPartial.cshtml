@* Modal *@
<div class="modal fade" id="backDropModal" data-bs-backdrop="static" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="backDropModalTitle">Khai báo thông tin sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="idFood" value="" hidden />
                <div class="row">
                    <div class="col mb-3">
                        <label for="tensanpham" class="form-label">Tên sản phẩm</label>
                        <input type="text" id="tensanpham" name="tensanpham" class="form-control" placeholder="">
                    </div>
                </div>
                <div class="row mb-3 g-2">
                    <div class="col mb-0">
                        <label for="giaca" class="form-label">Giá cả</label>
                        <input type="number" id="giaca" name="giaca" class="form-control" placeholder="">
                    </div>
                    <div class="col mb-3">
                        <label for="danhmuc" class="form-label">Danh mục</label>
                        <select class="form-select" id="danhmuc" aria-label="Danh mục sản phẩm"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-3">
                        <label for="hinhanh" class="form-label">Hình ảnh đại diện</label>
                        <input class="form-control" type="file" id="hinhanh" name="hinhanh">
                    </div>
                    <img class="shadow" id="uploadimage" src="~/images/upload.png" />
                </div>
                <div class="row">
                    <div class="mb-3">
                        <label for="mota" class="form-label">Mô tả thông tin</label>
                        <textarea class="form-control" id="mota" name="mota" rows="3"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-3">
                        <input class="form-check-input" type="checkbox" value="" id="activefood">
                        <label class="form-check-label" for="activefood">Kích hoạt</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-primary" onclick="AddFood()">Lưu thông tin</button>
            </div>
        </form>
    </div>
</div>